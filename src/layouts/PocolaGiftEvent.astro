---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../sections/Header.astro';
import Hero from '../sections/Hero.astro';
import Details from '../sections/pocola/Details.astro';
import FinalCTA from '../sections/pocola/FinalCTA.astro';

import { Image } from 'astro:assets';
import banner from '../assets/pocola/pocola-banner-image.jpg';

export type Props = {
	isElite: boolean;
};
const { isElite } = Astro.props;
const title = isElite
	? 'Onyx Elite Gift Event | Choctaw Casino & Resort Pocola'
	: 'Onyx Gift Event | Choctaw Casino & Resort Pocola';
---

<BaseLayout title={title}>
	<Header elite={isElite} />
	<Hero elite={isElite} />
	<Details elite={isElite} />
	<Image
		src={banner}
		alt='The entrance to Choctaw Casino & Resort in Pocola, Oklahoma'
		loading='lazy'
		class='w-100 h-100'
		id='banner-img'
	/>
	<FinalCTA elite={isElite} />
</BaseLayout>
